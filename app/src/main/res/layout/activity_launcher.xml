<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.codeprinciples.architecturecomponentsproject.viewmodels.LauncherViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.codeprinciples.architecturecomponentsproject.views.LauncherActivity">

        <ImageView
            android:id="@+id/launcher_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_android"
            android:visibility="@{viewModel.getError()==null?View.VISIBLE:View.GONE}"
            bind:startAnimation="@{@anim/anim_rotation}" />

        <ImageView
            android:id="@+id/error_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:src="@drawable/ic_error_outline"
            android:visibility="@{viewModel.getError()!=null?View.VISIBLE:View.GONE}" />

        <TextView
            android:id="@+id/error_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="@{()->viewModel.getConfiguration()}"
            android:text="@string/retry"
            android:textSize="20sp"
            android:visibility="@{viewModel.getError()!=null?View.VISIBLE:View.GONE}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_retry"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:text="@{viewModel.getError().getMessage()}"
            android:textSize="10sp"
            android:visibility="@{viewModel.getError()!=null?View.VISIBLE:View.GONE}" />

    </RelativeLayout>
</layout>
